<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.survey.SurveyFragment">


    <Button
        android:id="@+id/confirm_button3"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:text="@string/Question4"
        app:layout_constraintBottom_toTopOf="@+id/confirm_button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button5">

    </Button>

    <Button
        android:id="@+id/confirm_button2"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/Question2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button">

    </Button>


    <Button
        android:id="@+id/confirm_button5"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="@string/Question3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_button2">

    </Button>

    <Button
        android:id="@+id/confirm_button4"
        android:layout_width="148dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <TextView
        android:id="@+id/text_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/Question1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2">

    </Button>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:text="@string/yes"
        app:layout_constraintEnd_toStartOf="@+id/checkBox2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_survey" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/not_sure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_survey" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toBottomOf="@+id/text_survey" />


</androidx.constraintlayout.widget.ConstraintLayout>